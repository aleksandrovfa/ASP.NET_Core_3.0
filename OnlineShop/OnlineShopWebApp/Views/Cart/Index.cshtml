@model IEnumerable<CartLine>

@if (@Model.Count() == 0)
{
    <h3>Корзина пустая</h3>
}
else
{
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Цена</th>
                    <th>Количество</th>
                    <th>Стоимость</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var @cartLine in Model)
                {
                    <tr>
                        <td>@cartLine.Product.Name</td>
                        <td>@cartLine.Product.Cost</td>
                        <td>@cartLine.Quantity</td>
                        <td>@cartLine.Cost</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td></td>
                    <td></td>
                    <th>Итого:</th>
                    <td>@Model.Sum(x=> x.Cost)</td>
                </tr>
            </tfoot>
        </table>
        <div class="text-center">
            <a class="btn btn-secondary" href="/home/index" role="button">Продолжить покупки</a>
            <a class="btn btn-outline-warning" href="#" role="button">Продолжить покупки</a>
        </div>
    </div>
}
