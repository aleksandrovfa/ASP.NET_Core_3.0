@model Cart

@if (@Model == null || @Model.Items.Count() == 0)
{
    <h3>Корзина пустая</h3>
}
else
{
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Цена</th>
                    <th>Количество</th>
                    <th>Стоимость</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var @cartItem in Model.Items)
                {
                    <tr>
                        <td>@cartItem.Product.Name</td>
                        <td>@cartItem.Product.Cost</td>
                        <td>@cartItem.Quantity</td>
                        <td>@cartItem.Cost</td>
                        <td>
                            <a href="cart/add?productId=@cartItem.Product.Id" class="btn btn-primary">  +  </a>
                            <a href="cart/remove?productId=@cartItem.Product.Id" class="btn btn-secondary">  -  </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <th>Итого:</th>
                    <td>@Model.Items.Sum(x=> x.Cost)</td>
                </tr>
            </tfoot>
        </table>
        <div class="text-center">
            <a class="btn btn-secondary" href="/home/index" role="button">Продолжить покупки</a>
            <a class="btn btn-outline-warning" href="cart/clear" role="button">Очистить корзину</a>
        </div>
    </div>
}
